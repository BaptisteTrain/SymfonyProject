{# src/Sdz/BlogBundle/Resources/views/layout.html.twig #}

{% extends "::layout.html.twig" %}

{% block title %}
  {{ parent() }} - Blog
{% endblock %}

{% block style %}
  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
  {% endblock %}
{% endblock %}

{% block body %}
  <div class="container">
      <div id="header" class="hero-unit">
        <h1>Mon Projet Symfony2</h1>
        <h2>Blog</h2>
		<p>AUTEUR : Train Baptitse</p>
      </div>

      <div class="row">
        <div id="menu" class="span3">
          <h3>Le blog</h3>
		  
		  {# Lien vers l'acceuil et un autre vers la page d'ajout de billets #}
          <ul class="nav nav-pills nav-stacked">
            <li><a href="{{ path('sdzblog_acceuil') }}">Acceuil du blog</a></li>
            <li><a href="{{ path('sdzblog_ajouter') }}">Ajouter un billet</a></li>
          </ul>
           
		  {# On appelle ici la methodes menuAction du BlogController afin d'afficher a cet endroit la le menu des derniers billets. On choisie d'en afficher que 3 (les 3 derniers). #}
          {{ render(controller("SdzBlogBundle:Blog:menu", {'nombre': 3})) }}
        </div>
        <div id="content" class="span9">
		
			{# Ce nouveau block sera remplit par les vues de mon bundle #}
			{% block sdzblog_body %}
			{% endblock %}
			
        </div>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
{% endblock %}