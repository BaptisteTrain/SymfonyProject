{# src/Sdz/BlogBundle/Resources/views/Blog/index.html.twig #}

{% extends "SdzBlogBundle::layout.html.twig" %}

{% block title %}
  {{ parent() }} - Acceuil
{% endblock %}

{% block sdzblog_body %}

  <h2>Liste des billets</h2>

  <ul>
  {% for article in articles %}
    {% include "SdzBlogBundle:Blog:article.html.twig" with {'acceuil': true} %}
    <hr />
  {% else %}
  
	{# Si on a encore aucun billet, on entre dans ce cas. #}
    <p>Pas (encore !) de billet</p>
	
  {% endfor %}
  </ul>
  
  {# Mise en place des numeros de page #}
  <div class="pagination">
    <ul>
      {% for p in range(1, nombrePage) %}
        <li{% if p == page %} class="active"{% endif %}>
          <a href="{{ path('sdzblog_acceuil', {'page': p}) }}">{{ p }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>

{% endblock %}